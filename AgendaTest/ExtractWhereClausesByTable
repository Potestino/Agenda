    background: #e7eaf0;
    padding: 12px;
    text-align: left;
    font-weight: bold;
    border-bottom: 2px solid #d1d5de;
}

/* Body cells */
.service-grid table tbody tr td {
    padding: 12px;
    position: relative;
    border-bottom: 1px solid #e3e6ec;
}

/* Alternating stripes */
.service-grid table tbody tr:nth-child(even) td {
    background: rgba(255,255,255,0.75);
}

.service-grid table tbody tr:nth-child(odd) td {
    background: rgba(255,255,255,0.9);
}

/* Left ribbon bar */
.service-grid table tbody tr td:first-child::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 6px;
    height: 100%;
    border-radius: 4px 0 0 4px;
}

/* ==== STATUS COLORS ==== */

/* NORMAL (Yellow) */
